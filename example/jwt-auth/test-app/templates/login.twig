{% extends "page.twig" %}
{% block title %}Аутентификация{% endblock %}
{% block content %}
<div class="container">
  <div class="row mt-4">
    <div class="col-md-6 mx-auto">
      <form method="{{method|default('POST')}}" action="{{action|default('VERIFY')}}" >
        <div class="card z-depth-0">
          <div class="card-body text-center">
          <h3 class="card-title">Аутентификация</h3>

          <input type="hidden" name="callback" value="{{callback}}" />

          <div class="form-group">
            <label for="username">Имя пользователя</label>
            <input type="text" class="form-control" id="username" name="username" placeholder="Username">
          </div>

          <div class="form-group">
            <label for="email">Электронная почта: </label>
            <input type="email" class="form-control" id="email" name="email" placeholder="E-Mail">
          </div>

          <div class="form-group">
            <input type="checkbox" class="form-check-input" id="can_build" name="can_build">
            <label class="form-check-label" for="can_build">Может билдить проекты</label>
          </div>

          <div class="card-foter">
            <button type="submit" class="btn btn-primary" style="width: 140px;">Войти</button>
            <button type="button" class="btn btn-secondary" style="width: 140px;" onclick="history.back();">Отмена</button>
          </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
{% endblock %}
